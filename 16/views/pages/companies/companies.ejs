<h1>Lista firm:</h1>

<% if (user) { %>
  <a href="/admin/sklep/dodaj" class="btn btn-success">Dodaj nową firmę</a>
<% } %>

<a href="/csv">Pobierz CSV</a>

<form>
  <%- include('partials/search') %>


  <div class="row">
    <div class="col-3">

    <%- include('partials/filters') %>

    </div>
    <div class="col-9">
      <% companies.forEach(company => { %>
        <div class="card bg-light mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-3">
                <img src="/uploads/<%- company.image %>" class="img-fluid" alt="">
              </div>
              <div class="col-9">
                <p class="h3 mb-4"><%= company.name %></p>
                <p>Cena: <%= company.price %> zł</p>
                <p>Kontakt: <%- company.user?.email %></p>
                <p>Opis: <%= company.des %></p>
                <a href="/koszyk" class="btn btn-success">Kup teraz!!!</a>
                <% if (user) { %>
                  <a href="/admin/sklep/<%= company.name %>/edytuj" class="btn btn-warning">Edytuj</a>
                  <a href="/admin/sklep/<%= company.name %>/usun" 
                    onclick="return confirm('Czy jesteś pewny?')" 
                    class="btn btn-danger">Usuń</a>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <%- include('partials/pagination') %>

</form>